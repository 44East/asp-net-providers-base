@page
@model ProvidersBase.Pages.Providers.IndexModel

@{
    ViewData["Title"] = "Providers";
}

<h1>Providers</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by INN:
            <input type="text" name="SearchByINN" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary" /> 
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.TitleSort" />
                @Html.DisplayNameFor(model => model.ProviderCompanies[0].CompanyTitle)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.INNSort" />
                @Html.DisplayNameFor(model => model.ProviderCompanies[0].INN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProviderCompanies[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProviderCompanies[0].Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProviderCompanies) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.INN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
