            <div class="form-group">
                <label asp-for="ProviderUser.Username" class="control-label"></label>
                <input asp-for="ProviderUser.Username" class="form-control" />
                <span asp-validation-for="ProviderUser.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProviderUser.Email" class="control-label"></label>
                <input asp-for="ProviderUser.Email" class="form-control" />
                <span asp-validation-for="ProviderUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProviderUser.PhoneNumber" class="control-label"></label>
